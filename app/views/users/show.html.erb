<h1><%= @user.name %>のページ</h1>
<br>

<% @stories.reverse_each do |story| %>
<article>
  <div class="post">
    <ul>
      <div class="prev">
        <strong>
          <li class="post_user"><%= story.user.name %></li>
        </strong>
        <small>
          <li class="post_time"><%= story.created_at.strftime('%Y年%m月%d日 %k:%M') %></li>
        </small>
      </div>
      <div class="contents">
        <li class="sentence"><%= story.content %></li>
        <% if story.image.present? %>
          <li class="image"><%= image_tag story.image.url() %></li>
        <% end %>
      </div>
      <li><%= link_to 'Show', story %></li>
    </ul>
  </div>
</article>
<% end %>
